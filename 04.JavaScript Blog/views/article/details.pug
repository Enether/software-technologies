extends ../layout

block main-content
  .container.body-content
    .row
      .col-md-12
        article
          header
            h2= article.title
          p= article.content
          small.author= article.author.fullName
          footer
            .pull-left
              for tag in article.tags
                - let tagLink = '/tag/' + tag.name
                a.btn.btn-default.btn-xs(href=tagLink)= tag.name
            .pull-right
              if (user && (user.isAdmin() || user.isAuthor(article)))
                - let editLink = '/article/edit/' + article.id
                - let deleteLink = '/article/delete/' + article.id
                  a.btn.btn-success.btn-xs(href=editLink) Edit »
                  a.btn.btn-danger.btn-xs(href=deleteLink) Delete »
                a.btn.btn-default.btn-xs(href='/') Back »
