extends ../layout

block main-content
  .container.body-content(class='span=8 offset=2')
    .well
      form.form-horizontal(method='post', action='/article/create')
        fieldset
          legend New Post
            .form-group
              label.col-sm-4.control-label Post Title
              .col-sm-4
                input#postTitle.form-control(type='text', placeholder='Post Title' name='title')
            .form-group
              label.col-sm-4.control-label Content
              .col-sm-6
                textarea#postContent.form-control(rows='5' name='content')
            .form-group
              label.col-sm-4.control-label Category
              .col-sm-6
                select.form-control(id="select", name="category")
                  for category in categories
                    option(value=category.id)= category.name
            .form-group
              label.col-sm-4.control-label(for='article_tags') Tags
              .col-sm-4
                input#article_tags.form-control(type='text', placeholder='Tags', name='tagNames')
            .form-group
              .col-sm-4.col-sm-offset-4
                button.btn.btn-default(type='reset') Cancel
                input.btn.btn-primary(type='submit' value='Submit')
