  .container.body-content
    .row
      each article in articles
        .col-md-6
          article
            header
              h2= article.title
            p= article.content
            p
              for tag in article.tags
                - let tagLink = '/tag/' + tag.name
                a.btn.btn-default.btn-xs(href=tagLink)= tag.name
